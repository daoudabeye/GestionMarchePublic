@page
@using GestionMarchePublic.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Blockquote
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Button
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Card
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Table
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Theming
@model GestionMarchePublic.Pages.Demands.Index
@inject IStringLocalizer<GestionMarchePublicResource> L
@inject ITheme Theme

@section styles {
    <abp-style src="/Pages/Demands/Index.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/Demands/Index.cshtml.js" />
}

@{
    Layout = Theme.GetLayout(StandardLayouts.Application);
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Demands"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @* @if (await AuthorizationService.IsGrantedAsync(BookStorePermissions.Books.Create)) *@
                @* { *@
                    <abp-button id="NewDemandButton"
                                text="@L["NewDemand"].Value"
                                icon="plus"
                                button-type="Primary"/>
                @* } *@
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="DemandsTable"></abp-table>
    </abp-card-body>
</abp-card>